<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:DemoCenter.ViewModels"
             xmlns:mx3d="https://schemas.eremexcontrols.net/avalonia/controls3d"
             x:Class="DemoCenter.Views.Graphics3DControlStlView"
             x:DataType="vm:Graphics3DControlStlViewModel">
    <mx3d:Graphics3DControl Classes="DemoGraphics3DControl"
                            x:Name="DemoControl"
                            Gamma="6"
                            Exposure="2"
                            ModelsSource="{Binding Models}"
                            MaterialsSource="{Binding Materials}"
                            Skybox="{Binding Skybox}">
        <mx3d:Graphics3DControl.Camera>
            <mx3d:PerspectiveCamera DefaultCameraPosition="Up" />
        </mx3d:Graphics3DControl.Camera>
    </mx3d:Graphics3DControl>
</UserControl>
