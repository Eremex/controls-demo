<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mxdg="https://schemas.eremexcontrols.net/avalonia/datagrid"
			 xmlns:mxdc="clr-namespace:Eremex.AvaloniaUI.Controls.DataControl;assembly=Eremex.Avalonia.Controls"
             xmlns:mxe="https://schemas.eremexcontrols.net/avalonia/editors"
             xmlns:mx="https://schemas.eremexcontrols.net/avalonia"
			 xmlns:data="clr-namespace:DemoCenter.DemoData"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DemoCenter.Views.DataGridFilteringView">
    
    <Grid ColumnDefinitions="*, 250">
        <mxdg:DataGridControl x:Name="dataGrid" ItemsSource="{Binding Employees}" ShowGroupPanel="False" AllowEditing="False" SearchPanelDisplayMode="HotKey"
                              BorderThickness="1,0" IsSearchPanelVisible="True" ShowAutoFilterRow="True" ColumnFilterButtonDisplayMode="Always">
			<mxdg:GridColumn FieldName="FirstName" Width="*" MinWidth="80"/>
			<mxdg:GridColumn FieldName="LastName" Width="*" MinWidth="80"/>
			<mxdg:GridColumn FieldName="HireDate" Header="Hire Date" Width="*" MinWidth="80">
				<mxdg:GridColumn.EditorProperties>
					<mxe:DateEditorProperties/>
				</mxdg:GridColumn.EditorProperties>
			</mxdg:GridColumn>
			<mxdg:GridColumn FieldName="Experience" Width="110" MinWidth="90">
				<mxdg:GridColumn.EditorProperties>
					<mxe:SpinEditorProperties Increment="0.5" Minimum="0"/>
				</mxdg:GridColumn.EditorProperties>
			</mxdg:GridColumn>
			<mxdg:GridColumn FieldName="Position" Width="*" MinWidth="100">
				<mxdg:GridColumn.EditorProperties>
					<mxe:ComboBoxEditorProperties ItemsSource="{Binding Source={x:Static data:EmployeesData.Positions}}" />
				</mxdg:GridColumn.EditorProperties>
			</mxdg:GridColumn>
			<mxdg:GridColumn FieldName="EmploymentType" Width="*" MinWidth="150">
				<mxdg:GridColumn.EditorProperties>
					<mxe:ComboBoxEditorProperties ItemsSource="{mx:EnumItemsSource EnumType=data:EmploymentType}"/>
				</mxdg:GridColumn.EditorProperties>
			</mxdg:GridColumn>
			<mxdg:GridColumn FieldName="City" Width="*" MinWidth="100" />
			<mxdg:GridColumn FieldName="BirthDate" Width="*" MinWidth="80">
				<mxdg:GridColumn.EditorProperties>
					<mxe:DateEditorProperties/>
				</mxdg:GridColumn.EditorProperties>
			</mxdg:GridColumn>
        </mxdg:DataGridControl>

        <Border Grid.Column="1" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource Outline/Neutral/Transparent/Medium}">
            <StackPanel>
                <mxe:GroupBox Header="Filter Properties" VerticalAlignment="Top" Classes="PropertiesGroup">
                    <StackPanel>
                        <mxe:CheckEditor Content="Allow Column Filtering" IsChecked="{Binding #dataGrid.AllowColumnFiltering}" Classes="LayoutItem"/>
                        <DockPanel IsEnabled="{Binding #dataGrid.AllowColumnFiltering}">
                            <Label Content="Column Filter Icon Display Mode:" DockPanel.Dock="Top" Classes="LayoutItem"/>
                            <mxe:ComboBoxEditor ItemsSource="{mx:EnumItemsSource EnumType=mxdc:ColumnFilterButtonDisplayMode}"
                                                EditorValue="{Binding #dataGrid.ColumnFilterButtonDisplayMode}"
                                                Classes="LayoutItem"/>
                        </DockPanel>
                        <mxe:CheckEditor Content="Show Auto Filter Row" IsChecked="{Binding #dataGrid.ShowAutoFilterRow}" Classes="LayoutItem" Margin="6,6,6,0"/>
                        <DockPanel>
                            <Label Content="Filter Panel Display Mode:" DockPanel.Dock="Top" Classes="LayoutItem"/>
                            <mxe:ComboBoxEditor ItemsSource="{mx:EnumItemsSource EnumType=mxdc:FilterPanelDisplayMode}"
                                                EditorValue="{Binding #dataGrid.FilterPanelDisplayMode}"
                                                Classes="LayoutItem"/>
                        </DockPanel>
                    </StackPanel>
                </mxe:GroupBox>

                <mxe:GroupBox Header="Search Properties" VerticalAlignment="Top" Classes="PropertiesGroup">
                    <StackPanel>
                        <mxe:CheckEditor Content="Highlight Search Results" IsChecked="{Binding #dataGrid.SearchPanelHighlightResults}" Classes="LayoutItem"/>
                        <DockPanel>
                            <Label Content="Search Panel Display Mode:" DockPanel.Dock="Top" Classes="LayoutItem"/>
                            <mxe:ComboBoxEditor ItemsSource="{mx:EnumItemsSource EnumType=mxdc:SearchPanelDisplayMode}"
                                                EditorValue="{Binding #dataGrid.SearchPanelDisplayMode}"
                                                Classes="LayoutItem"/>
                        </DockPanel>
                    </StackPanel>
                </mxe:GroupBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
